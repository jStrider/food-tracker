# Database
DATABASE_PATH=data/foodtracker.db

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (used for CORS)
FRONTEND_URL=http://localhost:3000

# Development CORS ports (comma-separated)
# These localhost ports will be automatically allowed in development mode
DEV_PORTS=3000,3003,5173

# Additional CORS origins (comma-separated)
# For production, add your production domains here
# Example: ALLOWED_ORIGINS=https://app.foodtracker.com,https://www.foodtracker.com
# Note: FRONTEND_URL and DEV_PORTS are automatically included
ALLOWED_ORIGINS=

# OpenFoodFacts API
OPENFOODFACTS_API_URL=https://world.openfoodfacts.org/api/v0

# Authentication & Security
# IMPORTANT: Generate a secure random secret for production using:
# openssl rand -base64 64
# or: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_64_PLUS_RANDOM_CHARACTERS_FOR_SECURITY_1234567890abcdef
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Optional: OAuth providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100