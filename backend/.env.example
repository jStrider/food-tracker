# Database
DATABASE_PATH=data/foodtracker.db

# Server
PORT=3001
NODE_ENV=development

# CORS Configuration
# For production, set comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=https://app.foodtracker.com,https://www.foodtracker.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenFoodFacts API
OPENFOODFACTS_API_URL=https://world.openfoodfacts.org/api/v0

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Optional: OAuth providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100